
@{
    ViewBag.Title = "Client";
}

<h2>Client</h2>

<h4>Form</h4>
<form action="~/Registration/Client/" method="post">
    <div class="row">
        <div class="col-md-6">
            Name:
            <input name="name" type="text" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            Email:
            <input name="email" type="email" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            Password:
            <input name="password" type="password" class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

<hr />

<h4>Data</h4>
<p>Name: @ViewBag.Name</p>
<p>Email: @ViewBag.Email</p>
<p>Password: @ViewBag.Password</p>
